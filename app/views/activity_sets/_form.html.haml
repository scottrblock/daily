= form_for(@activity_set) do |f|
  - if @activity_set.errors.any?
    #error_explanation
      %h2
        = pluralize(@activity_set.errors.count, "error")
        prohibited this activity_set from being saved:
      %ul
        - @activity_set.errors.full_messages.each do |msg|
          %li= msg
  .actions
    = f.submit
